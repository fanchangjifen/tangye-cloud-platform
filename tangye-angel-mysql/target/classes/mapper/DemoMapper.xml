<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.angel.mysql.mapper.DemoMapper">

    <select id="selectDemoList" resultType="map">
        select code,name from pub_region where code=#{code}
    </select>

    <select id="selectDemoPageList" resultType="map">
        select code,name
        from pub_region where status = '1'
        <if test="condition.code!=null and condition.code!=''">
            and code = #{condition.code}
        </if>
    </select>
</mapper>